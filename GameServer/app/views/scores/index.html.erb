<p id="notice"><%= notice %></p>

<h1>Scores</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Completiontime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @scores.size == 0%>
      <tr>
        <td colspan="3">No scores found.</td>
      </tr>
    <% else %>
      <% @scores.each do |score| %>
        <tr>
          <td><%= score.name %></td>
          <td><%= score.completiontime %></td>
          <td><%= link_to 'Show', score %></td>
          <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
